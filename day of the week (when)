//////////     day of the week  /////////////



fun main(){
    val dayofweek = 5
    val dayname=when(dayofweek)
    {
        1->"monday"
        2->"Tuesday"
        3->"wednesday"
        4->"Thuresday"
        5->"Friday"
        6->"saturday"
        7->"sunday"
        else->"invalid day"
    }
    println("the day of the week is $dayname")
}
